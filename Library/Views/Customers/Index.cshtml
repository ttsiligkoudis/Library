@model IEnumerable<Library.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>
@Html.ActionLink("Create", "Create", "Customers", "", new { @class = "btn btn-primary" })
@if (!Model.Any())
{
    <p><br>You don't have any Customer registered yet!</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Age)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.RegDate)</th>
                <th class="col-lg-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.Age</td>
                    <td>@customer.Address</td>
                    <td>@customer.Email</td>
                    <td>@customer.RegDate</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Customers", new { id = customer.Id }, new { @class = "btn btn-delete btn-primary", id = "btn-delete" })</td>
                </tr>
            }
        </tbody>
    </table>
}


